{
  "version": "0.4.1",
  "wifi": {
    "ssid": "your_wifi_ssid_here",
    "password": "your_wifi_password_here"
  },
  "hostname": "PagodaLightPico",
  "timezone": {
    "name": "IST",
    "offset": 5.5
  },
  "hardware": {
    "rtc_i2c_sda_pin": 20,
    "rtc_i2c_scl_pin": 21,
    "pwm_frequency": 1000
  },
  "system": {
    "log_level": "INFO",
    "update_interval": 120,
    "server_idle_sleep_ms": 300,
    "client_read_sleep_ms": 50,
    "network_check_interval": 120,
    "ram_telemetry_enabled": false,
    "ram_telemetry_interval": 300,
    "web_title": "PagodaLightPico"
  },
  "notifications": {
    "enabled": false,
    "mqtt_broker": "broker.hivemq.com",
    "mqtt_port": 1883,
    "mqtt_topic": "PagodaLightPico/notifications",
    "mqtt_client_id": "PagodaLightPico",
    "notify_on_window_change": true,
    "notify_on_errors": true
  },
  "pwm_pins": {
    "pin_16": {
      "name": "Main LED Strip",
      "gpio_pin": 16,
      "enabled": true,
      "time_windows": {
        "_order": ["day", "evening", "night"],
        "day": {
          "start": "sunrise",
          "end": "sunset",
          "duty_cycle": 0
        },
        "evening": {
          "start": "sunset",
          "end": "22:00",
          "duty_cycle": 60
        },
        "night": {
          "start": "22:00",
          "end": "sunrise",
          "duty_cycle": 20
        }
      }
    },
    "pin_15": {
      "name": "Accent Lighting",
      "gpio_pin": 15,
      "enabled": false,
      "time_windows": {
        "_order": ["day", "night"],
        "day": {
          "start": "sunrise",
          "end": "sunset",
          "duty_cycle": 0
        },
        "night": {
          "start": "sunset",
          "end": "sunrise",
          "duty_cycle": 30
        }
      }
    }
  }
}