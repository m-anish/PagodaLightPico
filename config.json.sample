{
  "_comment": "Configuration for PagodaLightPico - JSON format for runtime updates",
  "_instruction": "Copy this file to config.json and update with your actual settings",
  "wifi": {
    "ssid": "your_wifi_ssid_here",
    "password": "your_wifi_password_here"
  },
  "hostname": "PagodaLightPico",
  "timezone": {
    "name": "IST",
    "offset": 5.5,
    "_comment": "Common timezones: IST=5.5, EST=-5, PST=-8, UTC=0"
  },
  "hardware": {
    "rtc_i2c_sda_pin": 20,
    "rtc_i2c_scl_pin": 21,
    "pwm_frequency": 1000,
    "_comment": "Pico W GPIO pins: 0-28, PWM frequency: 1-40000000 Hz"
  },
  "system": {
    "log_level": "INFO",
    "update_interval": 60,
    "_comment": "Log levels: FATAL, ERROR, WARN, INFO, DEBUG. Update interval in seconds."
  },
  "notifications": {
    "enabled": false,
    "mqtt_broker": "broker.hivemq.com",
    "mqtt_port": 1883,
    "mqtt_topic": "PagodaLightPico/notifications",
    "mqtt_client_id": "PagodaLightPico",
    "notify_on_window_change": true,
    "notify_on_errors": true,
    "_comment": "Set enabled=true and configure MQTT broker for push notifications"
  },
  "pwm_pins": {
    "pin_16": {
      "name": "Main LED Strip",
      "gpio_pin": 16,
      "enabled": true,
      "time_windows": {
        "day": {
          "start": "06:00",
          "end": "18:00",
          "duty_cycle": 0,
          "_comment": "Day window start/end times are replaced dynamically with sunrise/sunset"
        },
        "evening": {
          "start": "18:00",
          "end": "22:00",
          "duty_cycle": 60,
          "_comment": "Evening meditation period with 60% brightness"
        },
        "night": {
          "start": "22:00",
          "end": "06:00",
          "duty_cycle": 20,
          "_comment": "Night period with minimal lighting (crosses midnight)"
        }
      }
    },
    "_example_pin_15": {
      "name": "Accent Lighting",
      "gpio_pin": 15,
      "enabled": false,
      "time_windows": {
        "day": {
          "start": "06:00",
          "end": "18:00",
          "duty_cycle": 0
        },
        "night": {
          "start": "18:00",
          "end": "06:00",
          "duty_cycle": 30
        }
      },
      "_comment": "Example of a second pin configuration - remove _ prefix to enable"
    },
    "_format_comment": "Pin configurations: pin_<gpio_number> with name, gpio_pin, enabled, and time_windows",
    "_limits_comment": "Maximum 5 pins, minimum 1 pin. Each pin can have 2-5 time windows including mandatory 'day' window"
  }
}
